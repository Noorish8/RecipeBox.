<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green_abt"
    tools:ignore="UseCompoundDrawables">

    <View
        android:id="@+id/img_back_arrow"
        android:layout_width="21dp"
        android:layout_height="11dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/ic_back_arround"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/img_back_arrow"
        app:layout_constraintTop_toTopOf="@+id/img_back_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/img_back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/dark_black"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/img_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification"
        app:layout_constraintTop_toBottomOf="@+id/img_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/txt_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_notification"
        app:layout_constraintStart_toEndOf="@+id/img_notification"
        android:text="@string/enable_push_notification"
        android:layout_marginStart="25dp"
        android:textColor="@color/light_gray_abt"
        android:textSize="14dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@+id/txt_notification"
        app:layout_constraintTop_toTopOf="@+id/txt_notification"
        android:theme="@style/BrandedSwitch.control"
        android:layout_centerVertical="true" />
    <ImageView
        android:id="@+id/img_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_about_us"
        app:layout_constraintTop_toBottomOf="@+id/img_notification"
        app:layout_constraintStart_toStartOf="@+id/img_notification"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/lytAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_about_us"
        app:layout_constraintStart_toEndOf="@+id/img_notification"
        android:text="Abous us"
        android:textColor="@color/light_gray_abt"
        android:layout_marginStart="25dp"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/img_privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_polycy"
        app:layout_constraintTop_toBottomOf="@+id/img_about_us"
        app:layout_constraintStart_toStartOf="@+id/img_notification"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/lytPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_privacy_policy"
        app:layout_constraintStart_toEndOf="@+id/img_notification"
        android:text="Privacy policy"
        android:textColor="@color/light_gray_abt"
        android:layout_marginStart="25dp"
        android:textSize="14dp"/>
    <ImageView
        android:id="@+id/img_more_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_app"
        app:layout_constraintTop_toBottomOf="@+id/img_privacy_policy"
        app:layout_constraintStart_toStartOf="@+id/img_notification"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/lytMoreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_more_app"
        app:layout_constraintStart_toEndOf="@+id/img_notification"
        android:text=" More app"
        android:textColor="@color/light_gray_abt"
        android:layout_marginStart="25dp"
        android:textSize="14dp"/>
    <ImageView
        android:id="@+id/img_share_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_app"
        app:layout_constraintTop_toBottomOf="@+id/img_more_app"
        app:layout_constraintStart_toStartOf="@+id/img_notification"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/lytRateApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_share_app"
        app:layout_constraintStart_toEndOf="@+id/img_notification"
        android:text=" Share app"
        android:textColor="@color/light_gray_abt"
        android:layout_marginStart="25dp"
        android:textSize="14dp"/>
    <ImageView
        android:id="@+id/img_rate_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rate_app"
        app:layout_constraintTop_toBottomOf="@+id/img_share_app"
        app:layout_constraintStart_toStartOf="@+id/img_notification"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/lytShareApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_rate_app"
        app:layout_constraintStart_toEndOf="@+id/img_notification"
        android:text="Rate app"
        android:textColor="@color/light_gray_abt"
        android:layout_marginStart="25dp"
        android:textSize="14dp"/>





